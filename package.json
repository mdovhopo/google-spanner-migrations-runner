{
  "name": "google-spanner-migrations-runner",
  "version": "0.0.0",
  "description": "Migrations runner for Google Cloud Spanner Database",
  "keywords": [
    "spanner",
    "sql",
    "google",
    "google-cloud",
    "database",
    "migration",
    "migrations"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "google-spanner-migrations-runner": "./dist/bin/google-spanner-migrations-runner"
  },
  "author": "mdovhopo <dovgopolyy0000@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdovhopo/google-spanner-migrations-runner.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "lint": "eslint --fix --max-warnings 0 'src/**/*.ts'",
    "lint:ci": "eslint 'src/**/*.ts' --max-warnings 0",
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "cp -r src/bin dist",
    "test:e2e": "node -r ts-node/register  --env-file=.env  --test test/e2e/*.test.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@google-cloud/spanner": "^6.4.0",
    "chalk": "^4",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "14.1.0",
    "@commitlint/config-conventional": "14.1.0",
    "@types/jest": "^27.4.0",
    "@types/node": "20.10.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-config": "^27.4.7",
    "lint-staged": "^12.1.7",
    "multiline-str": "^1.0.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
