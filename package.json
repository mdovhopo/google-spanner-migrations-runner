{
  "name": "google-spanner-migrations-runner",
  "version": "0.0.0",
  "description": "Migrations runner for Google Cloud Spanner Database",
  "keywords": [
    "spanner",
    "sql",
    "google",
    "google-cloud",
    "database",
    "migration",
    "migrations"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "google-spanner-migrations-runner": "./dist/bin/google-spanner-migrations-runner"
  },
  "author": "mdovhopo <dovgopolyy0000@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdovhopo/google-spanner-migrations-runner.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "lint": "eslint --fix --max-warnings 0 'src/**/*.ts'",
    "lint:ci": "eslint 'src/**/*.ts' --max-warnings 0",
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "cp -r src/bin dist",
    "test": "node -r ts-node/register  --env-file=.env  --test test/**/*.test.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "peerDependencies": {
    "@google-cloud/spanner": ">=6"
  },
  "dependencies": {
    "chalk": "^5",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "^9.34.0",
    "@google-cloud/spanner": "^8.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "jest-config": "^30.1.1",
    "lint-staged": "^16.1.5",
    "multiline-str": "^1.0.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
